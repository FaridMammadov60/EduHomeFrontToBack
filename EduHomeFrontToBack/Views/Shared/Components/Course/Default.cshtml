@model List<Course>

  @foreach (var course in Model)
               {
                   <div class="col-md-4 col-sm-6 col-xs-12">
                    <div class="single-course mb-70">
                        <div class="course-img">
                            <a href="course-details.html"><img src="~/img/course/@course.ImageUrl" alt="course">
                                <div class="course-hover">
                                    <i class="fa fa-link"></i>
                                </div>
                            </a>
                        </div>
                        <div class="course-content">
                            @foreach (var item in @course.Category)
                           {
                            <h3><a href="course-details.html">@item.Name </a></h3>
                           }
                            <p>@course.Desc</p>
                            <a class="default-btn" href="course-details.html">read more</a>
                        </div>   
                    </div>
                </div>
               }
