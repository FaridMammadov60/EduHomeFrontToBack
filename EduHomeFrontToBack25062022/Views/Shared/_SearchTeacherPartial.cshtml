@model List<Teacher>

    @foreach (var item in Model)
    {
         <li style="background-color: whitesmoke; overflow:auto; max-height:max-content" class="d-flex justify-content-start ">
             <img width="160" src="~/img/teacher/@item.ImageUrl">
            <br> <a  style="background-color: white; color: black;" asp-controller="teacher" asp-action="detail" asp-route-id="@item.Id"> Name: @item.FullName.ToUpperInvariant()</a>
            <br> <strong style="background-color: white; color: black;font-weight:bolder">Position: @item.Position</strong>
         </li>
    }